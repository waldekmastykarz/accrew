{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "dist-electron",
    "rootDir": ".",
    "baseUrl": ".",
    "target": "ES2022",
    "lib": ["ES2022"]
  },
  "include": ["electron/**/*", "src/shared/**/*"]
}
